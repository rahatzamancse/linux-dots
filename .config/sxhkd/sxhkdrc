# Focus window by direction, works with multithread
super + {h,j,k,l}
	if ! bspc node -f {west,south,north,east}; then bspc monitor -f {west,south,north,east}; fi
super + {Left,Down,Up,Right}
	if ! bspc node -f {west,south,north,east}; then bspc monitor -f {west,south,north,east}; fi

# Go to last desktop
super + grave
	bspc desktop -f last
	
# Go to last window in current desktop
super + Tab
	bspc node -f last.local


