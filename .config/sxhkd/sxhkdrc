#Brightness control
XF86MonBrightness{Down,Up}
	xbacklight {-dec,-inc} 5

#Volume Control
XF86Audio{Lower,Raise}Volume
	amixer set Master 5%{-,+}
XF86AudioMute
	amixer set Master toggle

XF86Sleep
	systemctl suspend



